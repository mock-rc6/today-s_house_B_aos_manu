<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_img_review"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_img_review"
        android:layout_marginTop="40dp"
        android:text="Ccwws2"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/user_star1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/unstart_img"
        app:layout_constraintTop_toBottomOf="@+id/user_nickname"
        app:layout_constraintStart_toStartOf="@+id/user_nickname"
        app:layout_constraintBottom_toBottomOf="@+id/user_img_review"
        android:layout_marginRight="2dp"/>

    <ImageView
        android:id="@+id/user_star2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/unstart_img"
        app:layout_constraintTop_toTopOf="@+id/user_star1"
        app:layout_constraintStart_toEndOf="@+id/user_star1"
        app:layout_constraintBottom_toBottomOf="@+id/user_star1"
        android:layout_marginRight="2dp"/>

    <ImageView
        android:id="@+id/user_star3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/unstart_img"
        app:layout_constraintTop_toTopOf="@+id/user_star1"
        app:layout_constraintBottom_toBottomOf="@+id/user_star1"
        app:layout_constraintStart_toEndOf="@+id/user_star2" />

    <ImageView
        android:id="@+id/user_star4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/unstart_img"
        app:layout_constraintTop_toTopOf="@+id/user_star3"
        app:layout_constraintStart_toEndOf="@+id/user_star3"
        app:layout_constraintBottom_toBottomOf="@+id/user_star3"/>

    <ImageView
        android:id="@+id/user_star5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/unstart_img"
        app:layout_constraintTop_toTopOf="@+id/user_star4"
        app:layout_constraintStart_toEndOf="@+id/user_star4"
        app:layout_constraintBottom_toBottomOf="@+id/user_star4"/>


    <TextView
        android:id="@+id/user_write_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.06.29"
        android:textSize="14dp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/user_star5"
        app:layout_constraintTop_toTopOf="@+id/user_star5"
        app:layout_constraintBottom_toBottomOf="@+id/user_star5"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·"
        android:textSize="20dp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/user_write_date"
        app:layout_constraintTop_toTopOf="@+id/user_write_date"
        app:layout_constraintBottom_toBottomOf="@+id/user_write_date"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/where_buying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의집 구매"
        android:textSize="14dp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toTopOf="@+id/user_star5"
        app:layout_constraintBottom_toBottomOf="@+id/user_star5"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/warning_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고"
        android:textSize="14dp"
        android:textColor="@color/much_light_grey"
        app:layout_constraintStart_toEndOf="@+id/where_buying"
        app:layout_constraintTop_toTopOf="@+id/user_star5"
        app:layout_constraintBottom_toBottomOf="@+id/user_star5"
        android:layout_marginLeft="5dp"/>

    <View
        android:id="@+id/option_selected_view"
        android:layout_width="4dp"
        android:layout_height="50dp"
        android:background="@color/much_light_grey"
        app:layout_constraintStart_toStartOf="@+id/user_img_review"
        app:layout_constraintTop_toBottomOf="@+id/user_star1"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/option_title_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/option_selected_view"
        app:layout_constraintTop_toTopOf="@+id/option_selected_view"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:text="베이직 시어서커 프로틸 여름차렵이불"/>

    <TextView
        android:id="@+id/option_selected_what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/option_selected_view"
       app:layout_constraintBottom_toBottomOf="@+id/option_selected_view"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:text="베이지"/>
    
    <ImageView
        android:id="@+id/review_pic_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/banner_bg"
        app:layout_constraintTop_toBottomOf="@+id/option_selected_view"
        app:layout_constraintStart_toStartOf="@+id/option_selected_view"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/review_srcipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="굿! 너무 좋아요!"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/option_selected_view"
        app:layout_constraintTop_toBottomOf="@+id/review_pic_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="25dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>