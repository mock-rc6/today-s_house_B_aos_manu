<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cart_save_deliver_company"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="주식회사아소리빙 배송"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <View
        android:id="@+id/divie_line_cart_save1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/much_light_grey"
        app:layout_constraintTop_toBottomOf="@+id/cart_save_deliver_company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/cart_check"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:button="@null"
       app:layout_constraintTop_toBottomOf="@+id/divie_line_cart_save1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/sign_up_checkbox" />

    <ImageView
        android:id="@+id/cart_save_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/banner_bg"
        app:layout_constraintStart_toEndOf="@+id/cart_check"
        app:layout_constraintTop_toTopOf="@+id/cart_check"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/cart_product_name"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/cart_save_img"
        app:layout_constraintTop_toTopOf="@+id/cart_save_img"
        android:layout_marginLeft="15dp"
        android:text="[리벤스][오늘의딜]1+1 열전도 빠른 IH 인덕션/스마트 프라이팬 궁중팬 사각팬"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/exit_cancle_cart_save"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/exit_img"
        app:layout_constraintTop_toTopOf="@+id/cart_product_name"
        app:layout_constraintStart_toEndOf="@+id/cart_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/cart_free_deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cart_product_name"
        app:layout_constraintTop_toBottomOf="@+id/cart_product_name"
        android:text="무료배송"
        android:textColor="@color/grey"
        android:textSize="12dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/orgin_deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/cart_free_deliver"
        app:layout_constraintTop_toBottomOf="@+id/cart_product_name"
        android:layout_marginLeft="10dp"
        android:text="일반택배"
        android:textColor="@color/grey"
        android:textSize="12dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toEndOf="@+id/cart_free_deliver"
        app:layout_constraintEnd_toStartOf="@id/orgin_deliver"
        app:layout_constraintTop_toTopOf="@+id/orgin_deliver"
        app:layout_constraintBottom_toBottomOf="@id/orgin_deliver" />
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_price_container"
        android:layout_width="340dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/cart_free_deliver"
        app:layout_constraintStart_toStartOf="@+id/cart_save_img"
        android:background="@color/much_light_grey"
        android:layout_marginTop="15dp">
        
        <TextView
            android:id="@+id/option_choice_name_title"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/option_cancle_cart_save"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/exit_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/option_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="14,900원"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"/>
        
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/change_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/option_price_container"
        app:layout_constraintTop_toBottomOf="@+id/option_price_container"
        android:text="옵션변경"
        android:textColor="@color/grey"
        android:textSize="13dp"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/cart_now_buying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/change_option"
        app:layout_constraintTop_toBottomOf="@+id/option_price_container"
        android:layout_marginLeft="10dp"
        android:text="일반택배"
        android:textColor="@color/grey"
        android:textSize="13dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toEndOf="@+id/change_option"
        app:layout_constraintEnd_toStartOf="@id/cart_now_buying"
        app:layout_constraintTop_toTopOf="@+id/cart_now_buying"
        app:layout_constraintBottom_toBottomOf="@id/cart_now_buying" />

    <TextView
        android:id="@+id/cart_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14,900원"
        android:textSize="19dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/change_option"
        app:layout_constraintBottom_toBottomOf="@+id/change_option"
        app:layout_constraintEnd_toEndOf="@+id/option_price_container"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/cart_save_free_deliver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cart_total_price"
        android:text="배송비 무료"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey"
        android:gravity="center"/>

    <View
        android:id="@+id/divie_line_cart_save2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/much_light_grey"
        app:layout_constraintTop_toTopOf="@+id/cart_save_free_deliver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>