<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_info_img"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/banner_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"/>


    <ImageView
        android:id="@+id/home_tag_img_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/home_tag_btn_white"
        app:layout_constraintBottom_toBottomOf="@+id/home_info_img"
        app:layout_constraintEnd_toEndOf="@+id/home_info_img"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:id="@+id/home_info_script"
        android:layout_width="170dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/home_info_img"
        app:layout_constraintStart_toStartOf="@+id/home_info_img"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:text="위생적이고 실용적인"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"/>



</androidx.constraintlayout.widget.ConstraintLayout>