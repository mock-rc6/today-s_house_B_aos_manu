<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/evnet_img_list"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/envent_due_text"
        android:layout_width="70dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/evnet_img_list"
        app:layout_constraintEnd_toEndOf="@id/evnet_img_list"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/event_text_bg"
        android:textColor="@color/white"
        android:text="28일 남음"
        android:textSize="12dp"
        android:gravity="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>