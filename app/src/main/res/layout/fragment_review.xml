<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.main.store.storehome.productdetailpage.review.ReviewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>


        <TextView
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,945"
            android:textSize="18dp"
            android:textColor="@color/today_house_color"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/review_title"
            app:layout_constraintTop_toTopOf="@+id/review_title"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/go_to_reviewpage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@+id/review_title"
            app:layout_constraintBottom_toBottomOf="@+id/review_title"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/review_container"
            android:layout_width="380dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/review_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/much_light_grey"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/review_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="4.5"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/star_un1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unstart_img"
                app:layout_constraintTop_toTopOf="@+id/star_un3"
                app:layout_constraintEnd_toStartOf="@+id/star_un2"
                app:layout_constraintBottom_toBottomOf="@+id/star_un3"
                android:layout_marginRight="2dp"/>

            <ImageView
                android:id="@+id/star_un2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unstart_img"
                app:layout_constraintTop_toTopOf="@+id/star_un3"
                app:layout_constraintEnd_toStartOf="@+id/star_un3"
                app:layout_constraintBottom_toBottomOf="@+id/star_un3"
                android:layout_marginRight="2dp"/>

            <ImageView
                android:id="@+id/star_un3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unstart_img"
                app:layout_constraintTop_toBottomOf="@+id/review_point"
                app:layout_constraintStart_toStartOf="@+id/review_point"
                app:layout_constraintEnd_toEndOf="@+id/review_point"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/star_un4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unstart_img"
                app:layout_constraintTop_toTopOf="@+id/star_un3"
                app:layout_constraintStart_toEndOf="@+id/star_un3"
                app:layout_constraintBottom_toBottomOf="@+id/star_un3"
                android:layout_marginLeft="2dp"/>

            <ImageView
                android:id="@+id/star_un5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unstart_img"
                app:layout_constraintTop_toTopOf="@+id/star_un3"
                app:layout_constraintStart_toEndOf="@+id/star_un4"
                app:layout_constraintBottom_toBottomOf="@+id/star_un4"
                android:layout_marginLeft="2dp"/>

            <View
                android:id="@+id/review_div"
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:background="@color/much_light_grey"
                app:layout_constraintStart_toEndOf="@+id/star_un5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/five_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/review_div"
                app:layout_constraintTop_toTopOf="@+id/review_div"
                android:text="5점"
                android:textSize="13dp"
                android:textColor="@color/grey"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:id="@+id/four_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/review_div"
                app:layout_constraintTop_toBottomOf="@+id/five_point"
                android:text="4점"
                android:textSize="13dp"
                android:textColor="@color/grey"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/three_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/review_div"
                app:layout_constraintTop_toBottomOf="@+id/four_point"
                android:text="3점"
                android:textSize="13dp"
                android:textColor="@color/grey"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/two_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/review_div"
                app:layout_constraintTop_toBottomOf="@+id/three_point"
                android:text="2점"
                android:textSize="13dp"
                android:textColor="@color/grey"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/first_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/review_div"
                app:layout_constraintTop_toBottomOf="@+id/two_point"
                android:text="1점"
                android:textSize="13dp"
                android:textColor="@color/grey"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/five_point_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/five_point"
                android:text="1,263"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/four_point_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/four_point"
                android:text="1,263"
                android:layout_marginRight="20dp"/>


            <TextView
                android:id="@+id/three_point_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/three_point"
                android:text="1,263"
                android:layout_marginRight="20dp"/>


            <TextView
                android:id="@+id/second_point_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/two_point"
                android:text="1,263"
                android:layout_marginRight="20dp"/>


            <TextView
                android:id="@+id/first_point_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/first_point"
                android:text="1,263"
                android:layout_marginRight="20dp"/>

            <ProgressBar
                android:id="@+id/five_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toEndOf="@+id/five_point"
                app:layout_constraintEnd_toStartOf="@+id/five_point_count"
                app:layout_constraintTop_toTopOf="@+id/five_point"
                app:layout_constraintBottom_toBottomOf="@+id/five_point"/>


            <ProgressBar
                android:id="@+id/four_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toEndOf="@+id/four_point"
                app:layout_constraintEnd_toStartOf="@+id/four_point_count"
                app:layout_constraintTop_toTopOf="@+id/four_point"
                app:layout_constraintBottom_toBottomOf="@+id/four_point"/>

            <ProgressBar
                android:id="@+id/three_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toEndOf="@+id/three_point"
                app:layout_constraintEnd_toStartOf="@+id/three_point_count"
                app:layout_constraintTop_toTopOf="@+id/three_point"
                app:layout_constraintBottom_toBottomOf="@+id/three_point"/>

            <ProgressBar
                android:id="@+id/two_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toEndOf="@+id/two_point"
                app:layout_constraintEnd_toStartOf="@+id/second_point_count"
                app:layout_constraintTop_toTopOf="@+id/two_point"
                app:layout_constraintBottom_toBottomOf="@+id/two_point"/>

            <ProgressBar
                android:id="@+id/first_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toEndOf="@+id/first_point"
                app:layout_constraintEnd_toStartOf="@+id/five_point_count"
                app:layout_constraintTop_toTopOf="@+id/first_point"
                app:layout_constraintBottom_toBottomOf="@+id/first_point"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/review_img_list_viewpager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/much_light_grey"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/review_img_list_viewpager"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/review_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_recycler_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/review_img_list_viewpager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>