<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.MainActivity">

    <FrameLayout
        android:id="@+id/btm_frg_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_btm_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/btm_navi_item"
        android:background="@color/white"
        app:itemIconSize="@dimen/bottom_navi_size"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/btm_icon_check_color"
        app:itemTextColor="@color/btm_icon_check_color"
        app:itemBackground="@android:color/transparent"
        android:textAlignment="center"
        app:itemRippleColor="@android:color/transparent">

        <ImageView
            android:id="@+id/change_ani_img"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/btm_navi_homebtn_05"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"/>



    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>