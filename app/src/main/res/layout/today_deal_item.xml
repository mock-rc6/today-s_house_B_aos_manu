<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/today_deal_main_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/today_deal_img"
        android:background="@drawable/banner_bg"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:id="@+id/deal_tag_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/deal_item_select"
        app:layout_constraintBottom_toBottomOf="@+id/today_deal_main_img"
        app:layout_constraintEnd_toEndOf="@+id/today_deal_main_img"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/today_deal_due"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:text="5일 남음"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:background="@drawable/today_deal_text_bg"
        app:layout_constraintTop_toTopOf="@+id/today_deal_main_img"
        app:layout_constraintStart_toStartOf="@+id/today_deal_main_img"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"/>


    <TextView
        android:id="@+id/today_deal_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/today_deal_main_img"
        app:layout_constraintStart_toStartOf="@id/today_deal_main_img"
        android:text="메리메이드"
        android:textSize="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/today_deal_title"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/today_deal_company_name"
        app:layout_constraintStart_toStartOf="@+id/today_deal_company_name"
        android:text="안심 에어컨 분해청소(벽결이/스탠드 청소)"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/deal_discount_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/today_deal_title"
        app:layout_constraintStart_toStartOf="@id/today_deal_title"
        android:textSize="17dp"
        android:text="30%"
        android:textColor="@color/today_house_color"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/deal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/deal_discount_percent"
        app:layout_constraintStart_toEndOf="@+id/deal_discount_percent"
        android:textSize="17dp"
        android:text="59,500"
        android:layout_marginLeft="8dp"/>


    <ImageView
        android:id="@+id/today_deal_star_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/review_start_img"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/deal_discount_percent"
        app:layout_constraintStart_toStartOf="@+id/deal_discount_percent"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/today_deal_review_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/today_deal_star_img"
        app:layout_constraintBottom_toBottomOf="@+id/today_deal_star_img"
        app:layout_constraintTop_toTopOf="@+id/today_deal_star_img"
        android:text="4.7"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginLeft="3dp"/>


    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/today_deal_star_img"
        app:layout_constraintTop_toTopOf="@+id/today_deal_star_img"
        app:layout_constraintStart_toEndOf="@+id/today_deal_review_point"
        android:text="리뷰"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/review_text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/today_deal_star_img"
        app:layout_constraintTop_toTopOf="@+id/today_deal_star_img"
        app:layout_constraintStart_toEndOf="@+id/review_text"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"/>


    <TextView
        android:id="@+id/free_delivery"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:text="무료배송"
        android:background="@drawable/today_deal_btm1"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/today_deal_star_img"
        app:layout_constraintStart_toStartOf="@+id/today_deal_star_img"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:background="@drawable/today_deal_text_bg"
        android:text="특가"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/free_delivery"
        app:layout_constraintTop_toTopOf="@+id/free_delivery"
        app:layout_constraintBottom_toBottomOf="@+id/free_delivery"
        android:layout_marginLeft="3dp"/>












</androidx.constraintlayout.widget.ConstraintLayout>